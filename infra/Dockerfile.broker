# Dockerfile for bond WebSocket broker
FROM python:3.11-slim

WORKDIR /app

# Install dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy application code
COPY . .

# Expose port
EXPOSE 8080

# Run broker server
CMD ["uvicorn", "apps.broker.broker:app", "--host", "0.0.0.0", "--port", "8080"]
