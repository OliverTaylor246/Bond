# Bond environment configuration
# Copy this file to .env and update values

# Redis connection
REDIS_URL=redis://localhost:6379

# WebSocket host for client URLs
WS_HOST=localhost:8080
PUBLIC_WS_BASE=ws://localhost:8080/ws

# HMAC secret for token signing
# ⚠️  MUST change in production - use strong random value
BOND_SECRET=bond-dev-secret-change-in-production

# Token TTL (seconds, default 3600 = 1 hour)
BOND_TOKEN_TTL=3600

# Ring buffer replay window (seconds, default 60)
BOND_RING_SECONDS=60

# Maximum concurrent streams per project/user (default 5)
BOND_MAX_STREAMS=5

# On-chain gRPC endpoint (Yellowstone Geyser for Solana)
GRPC_ENDPOINT=chi1.cracknode.com:10000

# On-chain mode: "mock" or "grpc" (default: mock)
ONCHAIN_MODE=mock

# Twitter API credentials (optional - uses mock if not provided)
# X_BEARER=your_bearer_token_here

# Custom WebSocket URL for custom connector (optional)
# CUSTOM_WS_URL=wss://example.com/stream

# API port
API_PORT=8000

# Broker port
BROKER_PORT=8080
